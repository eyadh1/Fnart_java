<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #2C3E50;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.UpdateBeneficiaireBackController">
    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label text="Modifier le Bénéficiaire" style="-fx-text-fill: #3498DB; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        
        <GridPane hgap="20" vgap="20" style="-fx-background-color: #34495E; -fx-padding: 20; -fx-background-radius: 5;">
            <Label text="Nom:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nomTextField" style="-fx-background-color: #2C3E50; -fx-text-fill: #ECF0F1;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Email:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="emailTextField" style="-fx-background-color: #2C3E50; -fx-text-fill: #ECF0F1;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Téléphone:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="telephoneTextField" style="-fx-background-color: #2C3E50; -fx-text-fill: #ECF0F1;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <Label text="Cause:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="causeTextField" style="-fx-background-color: #2C3E50; -fx-text-fill: #ECF0F1;" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            
            <Label text="Association:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="associationTextField" style="-fx-background-color: #2C3E50; -fx-text-fill: #ECF0F1;" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            
            <Label text="Valeur Demandée:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="valeurTextField" style="-fx-background-color: #2C3E50; -fx-text-fill: #ECF0F1;" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            
            <Label text="Statut:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <ChoiceBox fx:id="statusChoiceBox" style="-fx-background-color: #2C3E50; -fx-text-fill: #ECF0F1;" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            
            <Label text="Description:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <TextArea fx:id="descriptionArea" wrapText="true" prefRowCount="3" style="-fx-background-color: #2C3E50; -fx-text-fill: #ECF0F1;" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        </GridPane>
        
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="updateButton" text="Mettre à jour" onAction="#handleUpdate" style="-fx-background-color: #27AE60; -fx-text-fill: #ECF0F1; -fx-font-weight: bold;"/>
            <Button fx:id="closeButton" text="Annuler" onAction="#handleClose" style="-fx-background-color: #E74C3C; -fx-text-fill: #ECF0F1; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</AnchorPane> 