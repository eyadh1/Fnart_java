<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.CartController"
      spacing="15"
      style="-fx-background-color: white;"
      prefWidth="800"
      prefHeight="600">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="PANIER" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>

    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" style="-fx-background-color: transparent;">
        <VBox fx:id="cartItemsContainer" spacing="15"/>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-padding: 10 0 0 0;">
        <Label text="Total TTC" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="totalPriceLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="continueButton" text="&lt; Continuer Mes Achats"
                style="-fx-background-color: #e0e0e0; -fx-text-fill: black; -fx-font-size: 14px;"/>
        <Button fx:id="orderButton" text="&lt;Commander >"
                onAction="#handleOrder"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                prefWidth="200"/>
    </HBox>

</VBox>