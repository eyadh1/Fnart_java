<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.CartController"
      spacing="10" 
      style="-fx-background-color: white;"
      prefWidth="400" 
      prefHeight="600">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Mon Panier" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    
    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" style="-fx-background-color: transparent;">
        <VBox fx:id="cartItemsContainer" spacing="10"/>
    </ScrollPane>
    
    <VBox spacing="10" style="-fx-padding: 10;">
        <Label fx:id="totalPriceLabel" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <Button fx:id="orderButton" 
                text="Passer la commande" 
                onAction="#handleOrder"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                maxWidth="Infinity"/>
    </VBox>
</VBox> 