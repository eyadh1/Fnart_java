<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>


<?import javafx.scene.shape.Circle?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.ProfileController" style="-fx-background-color: #F5F7FA;">
    <left>
        <!-- Left Sidebar -->
        <VBox spacing="30" style="-fx-background-color: linear-gradient(to bottom, #334342,#6F4D38, #331B19); -fx-padding: 20; -fx-min-width: 250;">
            <!-- Logo and App Name -->
            <VBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                    <clip>
                        <Circle centerX="30" centerY="30" radius="30" />
                    </clip>
                    <image>
                        <Image url="@/assets/paintingofawoman.jpeg" />
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="FNART" />
            </VBox>

            <!-- Navigation Menu -->
            <VBox spacing="15" style="-fx-padding: 20 0;">
                <Button fx:id="viewProfileButton" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="View Profile">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <clip>
                                <Circle centerX="10" centerY="10" radius="10" />
                            </clip>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="editProfileButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="Edit Profile">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <clip>
                                <Circle centerX="10" centerY="10" radius="10" />
                            </clip>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="resetPasswordButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="Reset Password">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <clip>
                                <Circle centerX="10" centerY="10" radius="10" />
                            </clip>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <!-- User Profile Section at Bottom -->
            <Region VBox.vgrow="ALWAYS"/>
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10;">
                <ImageView fx:id="topProfilePicture" fitWidth="40" fitHeight="40" preserveRatio="true">
                    <clip>
                        <Circle centerX="20" centerY="20" radius="20" />
                    </clip>
                    <image>
                        <Image url="@/assets/paintingofawoman.jpeg"/>
                    </image>
                </ImageView>
                <VBox>
                    <Label fx:id="userNameLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="User Name"/>
                    <Label fx:id="userEmailLabel" style="-fx-text-fill: white; -fx-font-size: 12px;" text="user@email.com"/>
                </VBox>
                <Button fx:id="profileMenuButton" style="-fx-background-color: transparent; -fx-padding: 0;">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <clip>
                                <Circle centerX="10" centerY="10" radius="10" />
                            </clip>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox spacing="30" style="-fx-padding: 30;">
                <!-- Header with Search Bar and Welcome Message -->
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT">
                        <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome back!" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <Label fx:id="dateLabel" style="-fx-text-fill: #666666;" text="Monday, 12 November, 2024" />
                    </HBox>

                </VBox>
                <StackPane>
                    <VBox fx:id="viewProfileSection" spacing="30" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
                        <Label text="Account Information" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #222;"/>
                        
                        <!-- Profile Picture and Camera Icon -->
                        <StackPane alignment="CENTER" style="-fx-padding: 20 0 30 0;">
                            <ImageView fx:id="profilePicture" fitHeight="120" fitWidth="120" preserveRatio="true">
                                <clip>
                                    <Circle centerX="60" centerY="60" radius="60" />
                                </clip>
                                <image>
                                    <Image url="@/assets/paintingofawoman.jpeg"/>
                                </image>
                            </ImageView>
                            <Button fx:id="changeProfilePictureButton" style="-fx-background-color: white; -fx-background-radius: 50%; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" 
                                    StackPane.alignment="BOTTOM_RIGHT">
                                <graphic>
                                    <ImageView fitHeight="20" fitWidth="20">
                                        <clip>
                                            <Circle centerX="10" centerY="10" radius="10" />
                                        </clip>
                                    </ImageView>
                                </graphic>
                            </Button>
                        </StackPane>

                        <!-- User Information (Updated: Two fields per row) -->
                        <GridPane hgap="30" vgap="20" style="-fx-padding: 20;">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>
                            <!-- First Row: Name & Email -->
                            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-padding: 10; -fx-background-color: #F8F9FA; -fx-background-radius: 5;">
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #222;" text="Full Name:" />
                                <Label fx:id="displayNameLabel" style="-fx-text-fill: #222;" />
                            </HBox>
                            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-padding: 10; -fx-background-color: #F8F9FA; -fx-background-radius: 5;">
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #222;" text="Email:" />
                                <Label fx:id="displayEmailLabel" style="-fx-text-fill: #222;" />
                            </HBox>
                            <!-- Second Row: Phone & Role -->
                            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-padding: 10; -fx-background-color: #F8F9FA; -fx-background-radius: 5;">
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #222;" text="Phone:" />
                                <Label fx:id="displayPhoneLabel" style="-fx-text-fill: #222;" />
                            </HBox>
                            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-padding: 10; -fx-background-color: #F8F9FA; -fx-background-radius: 5;">
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #222;" text="Role:" />
                                <Label fx:id="displayRoleLabel" style="-fx-text-fill: #222;" />
                            </HBox>
                            <!-- Third Row: Gender (alone, left) -->
                            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-padding: 10; -fx-background-color: #F8F9FA; -fx-background-radius: 5;">
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #222;" text="Gender:" />
                                <Label fx:id="displayGenderLabel" style="-fx-text-fill: #222;" />
                            </HBox>
                        </GridPane>
                    </VBox>
                    <VBox fx:id="editProfileSection" spacing="10" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;" visible="false">

                        <Label text="Edit Profile" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #222;"/>
                        <!-- Profile Picture Section -->
                        <VBox alignment="CENTER" spacing="10">
                            <ImageView fx:id="editProfilePicture" fitHeight="120" fitWidth="120" preserveRatio="true">
                                <clip>
                                    <Circle centerX="60" centerY="60" radius="60" />
                                </clip>
                                <image>
                                    <Image url="@/assets/paintingofawoman.jpeg"/>
                                </image>
                            </ImageView>
                        </VBox>
                        <!-- Form Fields: Two per row, plus bio -->
                        <GridPane hgap="20" vgap="20">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>
                            <!-- First Name -->
                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="First Name" style="-fx-text-fill: #222;"/>
                                <TextField fx:id="fullNameField" style="-fx-background-color: #F8F9FA; -fx-background-radius: 5; -fx-text-fill: #222;"/>
                            </VBox>
                            <!-- Last Name -->
                            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label text="Last Name" style="-fx-text-fill: #222;"/>
                                <TextField fx:id="lastNameField" style="-fx-background-color: #F8F9FA; -fx-background-radius: 5; -fx-text-fill: #222;"/>
                            </VBox>
                            <!-- Email -->
                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label text="Email" style="-fx-text-fill: #222;"/>
                                <TextField fx:id="emailField" style="-fx-background-color: #F8F9FA; -fx-background-radius: 5; -fx-text-fill: #222;"/>
                            </VBox>
                            <!-- Phone -->
                            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label text="Phone Number" style="-fx-text-fill: #222;"/>
                                <TextField fx:id="phoneField" style="-fx-background-color: #F8F9FA; -fx-background-radius: 5; -fx-text-fill: #222;"/>
                            </VBox>
                            <!-- Date of Birth -->
                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                <Label text="Date of Birth" style="-fx-text-fill: #222;"/>
                                <DatePicker fx:id="dateOfBirthPicker" style="-fx-background-color: #F8F9FA; -fx-background-radius: 5; -fx-text-fill: #222;"/>
                            </VBox>
                        </GridPane>
                        <!-- Bio Field -->
                        <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
                            <Label text="Bio" style="-fx-text-fill: #222;"/>
                            <TextArea fx:id="bioTextArea" promptText="Write something about yourself..." wrapText="true" style="-fx-background-color: #F8F9FA; -fx-background-radius: 5; -fx-text-fill: #222; -fx-pref-row-count: 3;"/>
                        </VBox>
                        <HBox alignment="CENTER_RIGHT">
                            <Button fx:id="saveButton" text="Save" style="-fx-background-color: linear-gradient(to bottom, #334342,#6F4D38, #331B19); -fx-text-fill: white; -fx-padding: 10 30; -fx-background-radius: 5; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>
                </StackPane>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
 