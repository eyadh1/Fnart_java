<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.effect.InnerShadow?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="500.0" prefWidth="700.0" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AjouterCommentairesController">
   <children>
      <VBox alignment="CENTER" layoutX="150.0" layoutY="70.0" prefHeight="360.0" prefWidth="500.0" style="-fx-background-color: #ffffff; -fx-background-radius: 20px;" spacing="25.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <effect>
            <DropShadow blurType="GAUSSIAN" height="30.0" radius="14.5" width="30.0">
               <color>
                  <Color red="0.0" green="0.0" blue="0.0" opacity="0.25" />
               </color>
            </DropShadow>
            <InnerShadow blurType="GAUSSIAN" choke="0.2" color="#007bff" height="15.0" radius="7.0" width="15.0">
               <input>
                  <GaussianBlur radius="2.0" />
               </input>
            </InnerShadow>
         </effect>
         <Label text="Ajouter un Commentaire" style="-fx-font-weight: bold; -fx-text-fill: #333333;">
            <font>
               <Font size="22.0" />
            </font>
            <effect>
               <InnerShadow color="#29abe2" />
            </effect>
         </Label>
         <TextField fx:id="TFtexte" alignment="CENTER" promptText="Votre commentaire..." onKeyTyped="#handleTextInput" style="-fx-border-radius: 8px; -fx-padding: 12px; -fx-font-size: 14px; -fx-border-color: #cccccc;" />
         <ComboBox fx:id="TFForum" prefWidth="200.0" promptText="Choisir le forum..." style="-fx-border-radius: 8px; -fx-padding: 12px; -fx-font-size: 14px; -fx-border-color: #cccccc;" />
         <Button fx:id="ajouterCommentAction" mnemonicParsing="false" onAction="#ajouterCommentAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-padding: 12px 24px; -fx-font-size: 16px;" text="Ajouter" />
         <HBox alignment="CENTER" spacing="10.0">
            <children>
               <Label fx:id="min" text="Longueur min est 3 caractères" textFill="RED" visible="false" />
               <Label fx:id="bien" text="Très bien" textFill="#12a157" visible="false" />
            </children>
         </HBox>
      </VBox>
   </children>
</AnchorPane>