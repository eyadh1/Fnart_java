<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.Color?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.DashboardController"
            style="-fx-background-color: #f0f2f5;">

    <!-- Top Navigation Bar -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 10px;" alignment="CENTER_LEFT">
            <Label text="Fnart Dashboard" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox style="-fx-background-color: #34495e; -fx-padding: 20px;" 
              spacing="20" prefWidth="200">
            <Label text="Menu" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Button fx:id="usersButton" text="Users Management" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>
            <Button fx:id="pendingApprovalsButton" text="Pending Approvals" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>
            <Button fx:id="statisticsButton" text="Statistics" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane>
            <!-- Users Management View -->
            <VBox fx:id="usersView" visible="true" spacing="20" padding="20">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <TextField fx:id="searchField" promptText="Search users..." 
                              style="-fx-background-radius: 5;"/>
                    <Button fx:id="searchButton" text="Search" 
                            style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                </HBox>
                
                <TableView fx:id="usersTable" style="-fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                        <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                        <TableColumn fx:id="roleColumn" text="Role" prefWidth="100"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Pending Approvals View -->
            <VBox fx:id="pendingApprovalsView" visible="false" spacing="20" padding="20">
                <Label text="Pending Approvals" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <TableView fx:id="pendingTable" style="-fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="pendingIdColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="pendingNameColumn" text="Name" prefWidth="150"/>
                        <TableColumn fx:id="pendingEmailColumn" text="Email" prefWidth="200"/>
                        <TableColumn fx:id="pendingRoleColumn" text="Requested Role" prefWidth="150"/>
                        <TableColumn fx:id="pendingActionsColumn" text="Actions" prefWidth="200"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Statistics View -->
            <VBox fx:id="statisticsView" visible="false" spacing="20" padding="20">
                <Label text="Statistics" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <GridPane hgap="20" vgap="20">
                    <Label text="Total Users:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="totalUsersLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" 
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <Label text="Pending Approvals:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="pendingApprovalsLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" 
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <Label text="Active Users:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="activeUsersLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" 
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>
        </StackPane>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 10px;" alignment="CENTER_RIGHT">
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane> 