<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.animation.FadeTransition?>
<?import javafx.animation.ScaleTransition?>
<?import javafx.util.Duration?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Priority?>


<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@styles/admin-style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AdminDashboardController">
    <left>
        <VBox prefWidth="200.0" styleClass="sidebar">
            <children>
                <Label alignment="CENTER" prefHeight="50.0" styleClass="sidebar-header" text="Dashboard"> </Label>
                <Button fx:id="forumButton" alignment="CENTER" mnemonicParsing="false" onAction="#showForumList" styleClass="sidebar-button" text="Forums" />
                <Button fx:id="commentButton" alignment="CENTER" mnemonicParsing="false" onAction="#showCommentList" styleClass="sidebar-button" text="Commentaires" />
                <Button fx:id="statsButton" alignment="CENTER" mnemonicParsing="false" onAction="#showStatistics" styleClass="sidebar-button" text="Voir les Statistiques" />

                <VBox VBox.vgrow="ALWAYS"> <!-- This will push the logout button to the bottom -->
                    <children>
                        <AnchorPane /> <!--  This invisible AnchorPane will fill the remaining space -->
                    </children>
                </VBox>

                <Button fx:id="logoutButton" alignment="CENTER" mnemonicParsing="false" onAction="#logout" styleClass="sidebar-button" >
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/assets/logout.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <!-- Ajoutez d'autres boutons ici (utilisateurs, catÃ©gories, etc.) -->
            </children>
        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="contentArea" styleClass="content-area">
            <children>
                <ImageView AnchorPane.rightAnchor="5.0" fitHeight="30.0" fitWidth="30.0" preserveRatio="true" styleClass="mini-icon">
                    <image>
                        <Image url="@/assets/profile.png" /> <!-- Replace mini-icon.png with the actual name -->
                    </image>
                </ImageView>

                <StackPane alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <children>
                        <Label fx:id="welcomeLabel" text="Bienvenue sur le dashboard d'admin" styleClass="welcome-label">
                            <font>
                                <Font size="36.0" />
                            </font>
                            <style>
                                -fx-text-fill: #4CAF50; /* A nice green color */
                            </style>
                        </Label>
                    </children>
                </StackPane>


            </children>
        </AnchorPane>
    </center>
</BorderPane>