<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #2C3E50;" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AddBeneficiaireBackController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <!-- Title -->
         <Label text="Ajouter un Bénéficiaire" style="-fx-text-fill: #ECF0F1; -fx-font-size: 24px; -fx-font-weight: bold;">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </Label>
         
         <!-- Form Fields -->
         <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="Nom:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="NomTextField" prefWidth="200.0" style="-fx-background-color: #34495E; -fx-text-fill: #ECF0F1; -fx-prompt-text-fill: #BDC3C7;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Email:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="EmailTextField" prefWidth="200.0" style="-fx-background-color: #34495E; -fx-text-fill: #ECF0F1; -fx-prompt-text-fill: #BDC3C7;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Téléphone:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="TelephoneTextField" prefWidth="200.0" style="-fx-background-color: #34495E; -fx-text-fill: #ECF0F1; -fx-prompt-text-fill: #BDC3C7;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <Label text="Association:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <ChoiceBox fx:id="AssociationChoice" prefWidth="200.0" style="-fx-background-color: #34495E; -fx-text-fill: #ECF0F1;" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            
            <Label text="Cause:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="CauseTextField" prefWidth="200.0" style="-fx-background-color: #34495E; -fx-text-fill: #ECF0F1; -fx-prompt-text-fill: #BDC3C7;" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            
            <Label text="Valeur Demandée:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="ValeurTextField" prefWidth="200.0" style="-fx-background-color: #34495E; -fx-text-fill: #ECF0F1; -fx-prompt-text-fill: #BDC3C7;" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            
            <Label text="Description:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextArea fx:id="DescriptionTextArea" prefWidth="200.0" prefHeight="100.0" style="-fx-background-color: #34495E; -fx-text-fill: #ECF0F1; -fx-prompt-text-fill: #BDC3C7;" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            
            <Label text="Statut:" style="-fx-text-fill: #ECF0F1; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <ChoiceBox fx:id="StatusChoice" prefWidth="200.0" style="-fx-background-color: #34495E; -fx-text-fill: #ECF0F1;" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
         </GridPane>
         
         <!-- Buttons -->
         <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="AjoutButton" mnemonicParsing="false" onAction="#handleSubmit" text="Ajouter" 
                    style="-fx-background-color: #27AE60; -fx-text-fill: #ECF0F1; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 40;"/>
            
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Retour" 
                    style="-fx-background-color: #7F8C8D; -fx-text-fill: #ECF0F1; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 40;"/>
         </HBox>
      </VBox>
   </children>
   
   <style>
      .button:hover {
          -fx-background-color: #2C3E50 ;
      }
   </style>
</AnchorPane> 