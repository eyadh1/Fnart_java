<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateBeneficiaireController" style="-fx-background-color: #EFDAC7;">
   <children>
      <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
         <Label text="Modifier un Bénéficiaire" style="-fx-text-fill: #F2F2F2; -fx-font-size: 24px; -fx-font-weight: bold;"/>
         
         <GridPane hgap="10" vgap="10">
            <Label text="Nom" style="-fx-text-fill: #BA9D1F; -fx-font-weight: bold;"/>
            <TextField fx:id="NomTextField" GridPane.columnIndex="1" prefWidth="200" style="-fx-background-color: #F2F2F2;"/>
            
            <Label text="Email" GridPane.rowIndex="1" style="-fx-text-fill: #BA9D1F; -fx-font-weight: bold;"/>
            <TextField fx:id="EmailTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200" style="-fx-background-color: #F2F2F2;"/>
            
            <Label text="Téléphone" GridPane.rowIndex="2" style="-fx-text-fill: #BA9D1F; -fx-font-weight: bold;"/>
            <TextField fx:id="TelephoneTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200" style="-fx-background-color: #F2F2F2;"/>
            
            <Label text="Est-elle une association ?" GridPane.rowIndex="3" style="-fx-text-fill: #BA9D1F; -fx-font-weight: bold;"/>
            <ChoiceBox fx:id="AssociationChoice" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200" style="-fx-background-color: #F2F2F2;"/>
            
            <Label text="Valeur demandée" GridPane.rowIndex="4" style="-fx-text-fill: #BA9D1F; -fx-font-weight: bold;"/>
            <TextField fx:id="ValeurTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="200" style="-fx-background-color: #F2F2F2;"/>
            
            <Label text="Cause" GridPane.columnIndex="2" style="-fx-text-fill: #BA9D1F; -fx-font-weight: bold;"/>
            <TextField fx:id="CauseTextField" GridPane.columnIndex="3" prefWidth="200" style="-fx-background-color: #F2F2F2;"/>
            
            <Label text="Description" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-text-fill: #BA9D1F; -fx-font-weight: bold;"/>
            <TextArea fx:id="DescriptionTextArea" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="200" prefHeight="100" style="-fx-background-color: #F2F2F2;"/>
         </GridPane>
         
         <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="UpdateButton" text="Modifier" style="-fx-background-color: #A6695B; -fx-text-fill: #F2F2F2; -fx-font-weight: bold;"/>
            <Button fx:id="DeleteButton" text="Supprimer" style="-fx-background-color: #A6695B; -fx-text-fill: #F2F2F2; -fx-font-weight: bold;"/>
            <Button fx:id="BackButton" text="Retour" style="-fx-background-color: #A6695B; -fx-text-fill: #F2F2F2; -fx-font-weight: bold;"/>
         </HBox>
      </VBox>
   </children>
</AnchorPane> 