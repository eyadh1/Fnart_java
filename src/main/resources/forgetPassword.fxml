<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.ForgetPasswordController" prefWidth="700" prefHeight="500">

    <HBox prefWidth="700" prefHeight="500">
        <!-- Left side: Illustration with gradient background -->
        <VBox alignment="CENTER" prefWidth="350" prefHeight="500"
              style="-fx-background-color: linear-gradient(to bottom, #334342,#6F4D38, #331B19);">
            <ImageView fitWidth="250" fitHeight="350" pickOnBounds="true">
                <image>
                    <Image url="@/assets/triple.png" />
                </image>
            </ImageView>
        </VBox>
        <!-- Right side: Form -->
        <VBox alignment="CENTER" spacing="20" prefWidth="350" prefHeight="500" style="-fx-padding: 40;">
            <Label text="Reset your Password" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #222;" />
            <Label text="The verification email will be sent to the mailbox. Please check it."
                   style="-fx-text-fill: #555;" />
            <Label text="Email" style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-alignment: CENTER_LEFT;" />
            <TextField fx:id="emailTextField" promptText="Enter your email" />
            <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />
            <Button fx:id="sendButton" text="Send" style="-fx-background-color: #7C4DFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8 40;" />
            <Label fx:id="backToLoginLabel" text="Back to Login" style="-fx-text-fill: #888; -fx-underline: true; -fx-cursor: hand;" />
        </VBox>
    </HBox>
</AnchorPane>
