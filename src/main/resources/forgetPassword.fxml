<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.ForgetPasswordController"
            prefHeight="500.0" prefWidth="400.0"
            style="-fx-background-color: #f5f5f5;">

    <VBox alignment="CENTER" spacing="20.0" 
          AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" 
          AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
        
        <!-- Title -->
        <Label text="Reset Password" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        
        <Label text="Enter your email and new password" 
               style="-fx-text-fill: #666666;"/>
        
        <!-- Email Field -->
        <TextField fx:id="emailField" 
                  promptText="Email" 
                  prefWidth="300.0" 
                  style="-fx-background-radius: 5;"/>
        
        <!-- New Password Field -->
        <PasswordField fx:id="newPasswordField" 
                      promptText="New Password" 
                      prefWidth="300.0" 
                      style="-fx-background-radius: 5;"/>
        
        <!-- Confirm Password Field -->
        <PasswordField fx:id="confirmPasswordField" 
                      promptText="Confirm New Password" 
                      prefWidth="300.0" 
                      style="-fx-background-radius: 5;"/>
        
        <!-- Error Label -->
        <Label fx:id="errorLabel" 
               style="-fx-text-fill: red;"/>
        
        <!-- Reset Button -->
        <Button fx:id="resetButton" 
                text="Reset Password" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                prefWidth="300.0"/>
    </VBox>

</AnchorPane> 