<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@css/style.css" style="-fx-background-color: #EFDAC7;" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ListeDonsController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <!-- Title -->
         <Label text="Liste des Dons" style="-fx-text-fill: #BA9D1F; -fx-font-size: 24px; -fx-font-weight: bold;">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </Label>
         
         <!-- Search and Filter Controls -->
         <HBox alignment="CENTER" spacing="20.0">
            <TextField fx:id="searchTextField" promptText="Rechercher..." prefWidth="300.0" />
            <ChoiceBox fx:id="typeFilterChoice" prefWidth="150.0" />
         </HBox>
         
         <!-- List View -->
         <ListView fx:id="donsListView" prefHeight="400.0" prefWidth="700.0" />
         
         <!-- Back Button -->
         <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Retour" style="-fx-background-color: #A6695B; -fx-text-fill: #F2F2F2; -fx-font-weight: bold;">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
         </Button>
      </VBox>
   </children>
</AnchorPane> 