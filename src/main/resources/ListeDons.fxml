<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ListeDonsController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <!-- Title -->
         <Label styleClass="art-title" stylesheets="@css/style.css" text="Liste des Dons">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </Label>
         
         <!-- Search and Filter Controls -->
         <HBox alignment="CENTER" spacing="20.0">
            <TextField fx:id="searchTextField" prefWidth="300.0" promptText="Rechercher..." />
            <ChoiceBox fx:id="typeFilterChoice" prefWidth="150.0" />
         </HBox>
         
         <!-- List View -->
         <ListView fx:id="donsListView" prefHeight="400.0" prefWidth="700.0" />
         

         <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" stylesheets="@css/pinterest-style.css" text="Retour">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
         </Button>
      </VBox>
   </children>
</AnchorPane>
