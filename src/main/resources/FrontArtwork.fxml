<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="tn.esprit.controllers.FrontArtworkController"
      styleClass="root">

    <!-- Top Navigation Bar -->
    <HBox styleClass="top-bar" alignment="CENTER" spacing="20">
        <!-- Logo -->
        <Label text="ArtTherapy" styleClass="logo"/>
        
        <!-- Search Bar -->
        <HBox styleClass="search-bar-container" HBox.hgrow="ALWAYS">
            <FontAwesomeIconView glyphName="SEARCH" styleClass="search-icon" size="1.2em"/>
            <TextField fx:id="searchField" promptText="Rechercher des œuvres d'art..." 
                      styleClass="search-field" HBox.hgrow="ALWAYS"/>
        </HBox>
        
        <!-- Navigation Items -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Accueil" styleClass="nav-button" onAction="#handleOeuvres">
                <graphic>
                    <FontAwesomeIconView glyphName="HOME" styleClass="nav-icon" size="1.2em"/>
                </graphic>
            </Button>
            <Button text="Atelier" styleClass="nav-button" onAction="#handleAtelier">
                <graphic>
                    <FontAwesomeIconView glyphName="PAINT_BRUSH" styleClass="nav-icon" size="1.2em"/>
                </graphic>
            </Button>
            <Button text="Dons" styleClass="nav-button" onAction="#handleDons">
                <graphic>
                    <FontAwesomeIconView glyphName="GIFT" styleClass="nav-icon" size="1.2em"/>
                </graphic>
            </Button>
            <Button text="Forum" styleClass="nav-button" onAction="#handleForum">
                <graphic>
                    <FontAwesomeIconView glyphName="COMMENTS" styleClass="nav-icon" size="1.2em"/>
                </graphic>
            </Button>
            <Button text="Se connecter" styleClass="action-button"/>
        </HBox>
        
        <!-- Profile Section -->
        <HBox alignment="CENTER" spacing="8">
            <ImageView fx:id="profileImage" fitWidth="40" fitHeight="40" pickOnBounds="true" preserveRatio="true" styleClass="profile-image"/>
            <MenuButton text="Accounts" styleClass="accounts-menu">
                <items>
                    <MenuItem text="Mon profil"/>
                    <MenuItem text="Déconnexion"/>
                </items>
            </MenuButton>
        </HBox>
        <!-- Dans la partie Navigation Items -->
        <HBox spacing="10" alignment="CENTER">
            <!-- ... autres boutons existants ... -->
            <Button text="Panier" styleClass="nav-button" onAction="#handleCart">
                <graphic>
                    <FontAwesomeIconView glyphName="SHOPPING_CART" styleClass="nav-icon" size="1.2em"/>
                </graphic>
            </Button>
            <Button text="Se connecter" styleClass="action-button"/>
        </HBox>
    </HBox>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="main-scroll-pane" fitToHeight="false">
        <TilePane fx:id="artworkGrid" styleClass="masonry-grid" hgap="16" vgap="16" prefColumns="4">
            <!-- Artwork cards will be added here dynamically -->
        </TilePane>
    </ScrollPane>

    <stylesheets>
        <URL value="@styles/pinterest-style.css"/>
    </stylesheets>
</VBox>