<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.ResetPasswordController" prefWidth="400" prefHeight="400">
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
        <Label text="Reset Your Password" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #222;" />
        <Label text="Please enter the verification code sent to your email and your new password." style="-fx-text-fill: #555;" />
        <TextField fx:id="verificationCodeField" promptText="Verification Code" />
        <PasswordField fx:id="newPasswordField" promptText="New Password" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
        <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />
        <Button fx:id="resetButton" text="Reset Password" style="-fx-background-color: #7C4DFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8 40;" onAction="#handleResetPassword" />
    </VBox>
</AnchorPane> 